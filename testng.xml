<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="PetStore API Suite" verbose="1">

    <!-- ✅ Extent Report Listener added ONCE at suite level -->
    <listeners>
        <listener class-name="api.utilities.ExtentReportManager"/>
    </listeners>

    <!-- ✅ First run normal user tests -->
    <test name="User API Tests">
        <classes>
            <class name="api.test.UserTests2"/>
        </classes>
    </test>

    <!-- ✅ Then run Data Driven tests in correct order -->
    <test name="DDTests" preserve-order="true">
        <classes>
            <class name="api.test.DDTests"/>
        </classes>
    </test>

</suite>
